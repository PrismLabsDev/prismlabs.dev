---
import Layout from '../layouts/Layout.astro';
// import Card from '../components/Card.astro';
import Life from '../components/Life.astro';
import { Icon } from 'astro-icon'
const projects = await Astro.glob('../content/projects/*.md');
const articles = await Astro.glob('../content/articles/*.md');
---

<Layout title="Welcome to Prism Labs!">
	<>
    <div class="absolute z-0">
      <Life/>
    </div>
    
    <!-- Hero -->
    <div id="hero" class="flex flex-col justify-center text-center content-center min-h-[calc(100vh-64px)]">
      <h1 class="z-10 font-righteous text-8xl mt-12">Prism Labs</h1>
      <p class="z-10 pt-10 text-xl">We are a collective of passionate developers creating cool software!</p>
      <div class="z-10 flex justify-center pt-20">
        <a href="/#about"><Icon name="mdi:chevron-down" class="w-20 animate-bounce" /></a>
      </div>
    </div>

    <!-- About -->
    <div id="about" class="flex min-h-[calc(100vh-64px)] pt-16">
      <h1>About</h1>
    </div>

    <!-- Projects -->
    <div id="projects" class="flex min-h-[calc(100vh-64px)] pt-16">
      <h1>Projects</h1>
      <br/>
      <ul>
        {projects.map(project => <li><a href={"/project/" + project.frontmatter.slug}>{project.frontmatter.title}</a></li>)}
      </ul>
    </div>

      <!-- Articles -->
      <div id="articles" class="flex min-h-[calc(100vh-64px)] pt-16">
        <h1>Articles</h1>
        <br/>
        <ul>
          {articles.map(article => <li><a href={"/article/" + article.frontmatter.slug}>{article.frontmatter.title}</a></li>)}
        </ul>
      </div>

