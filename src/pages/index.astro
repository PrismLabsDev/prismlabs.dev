---
import Layout from '../layouts/Layout.astro';
// import Card from '../components/Card.astro';
import { Icon } from 'astro-icon'
const projects = await Astro.glob('../content/projects/*.md');
---

<Layout title="Welcome to Prism Labs!">
	<>
    <!-- Hero -->
    <div id="hero" class="flex flex-col justify-center text-center content-center min-h-[calc(100vh-64px)]">
      <h1 class="font-righteous text-8xl mt-12">Prism Labs</h1>
      <p class="pt-10 text-xl">We are a collective of passionate developers creating cool software!</p>
      <div class="flex justify-center pt-20">
        <a href="/#about"><Icon name="mdi:chevron-down" class="w-20 animate-bounce" /></a>
      </div>
    </div>

    <!-- About -->
    <div id="about">
      <h1>About</h1>
    </div>

    <!-- Projects -->
    <div id="projects">
      <h1>Projects</h1>

      <ul>
        {projects.map(project => <li><a href={"/project/" + project.frontmatter.slug}>{project.frontmatter.title}</a></li>)}
      </ul>
    </div>

